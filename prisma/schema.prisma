generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Segment {
  id         String   @id
  sessionId  String
  agentId    String
  timestamp  DateTime
  messages   Json
  turnCount  Int
  sent       Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
